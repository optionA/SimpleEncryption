<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GroupApp.TextEncryptController">
   <children>
      <Button fx:id="encryptFileButton" layoutX="6.0" layoutY="346.0" mnemonicParsing="false" onAction="#encryptFile" prefHeight="27.0" prefWidth="272.0" text="Encrypt File">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="enterFilePrompt" disable="true" layoutX="6.0" layoutY="229.0" opacity="0.0" prefHeight="27.0" prefWidth="187.0" text="Enter New File Name:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="newFileName" disable="true" layoutX="6.0" layoutY="253.0" opacity="0.0" prefHeight="25.0" prefWidth="272.0" />
      <CheckBox fx:id="renameCheck" layoutX="7.0" layoutY="198.0" mnemonicParsing="false" onAction="#renameToggle" prefHeight="27.0" prefWidth="174.0" text="Rename File?" />
      <CheckBox fx:id="burnCheck" layoutX="7.0" layoutY="169.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="174.0" text="Burn Original File?" />
      <Button fx:id="selectFile" layoutX="6.0" layoutY="89.0" mnemonicParsing="false" onAction="#openFileChooser" prefHeight="27.0" prefWidth="272.0" text="Select File">
